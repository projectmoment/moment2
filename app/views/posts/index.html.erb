  <!-- Post List Table -->
    <div class="container">
    </div>
  
  <div class="box-container">
    <div class="newsfeed">
      <% @boards.each do |board| %>
        <div class="box">
          <div class="">
              <a class="ui label">
              <img src="<%= board.profile.user.info.try("image_url") %>">
              <span><%= board.profile.user.name %></span>
              </a>
            <img class="image" src="<%= board.image_url %>">
            <div class="padding">
                <!-- 좋아요 -->
              <div class="like">
                <% if current_user.is_like?(board) %>
                    <div class="ui labeled button like-button-songyi">
                    <%= link_to like_board_path(board), method: "POST" do%>
                     <div class="ui red button">
                     좋아요 취소
                     </div>
                     <a class="ui basic right pointing label"><%= board.liked_users.size %></a>
                    </div>
                    <% end %>
                <% else %>
                    <div class="ui labeled button like-button-songyi" tabindex="0">
                    <%= link_to like_board_path(board), method: "POST", class: "ui red button" do%>
                    <i class="heart icon">like</i>
                    <% end %>
                    <a class="ui basic right pointing label"><%= board.liked_users.size %></a>
                    </div>
                <% end %>  
              </div>
                <!-- 게시글 정보 -->
                   <h5><%= board.title %></h5>
                   <h6><%= board.content %></h6>
                
                <!-- 게시글 편집 -->
                <% if user_signed_in? && current_user.id == board.profile.user.id %>
                <a href="/board/edit/<%= board.id %>"><i class="material-icons">edit</i></a>
                    <%= link_to board, method: :delete, data: { confirm: '삭제하시겠습니까??' } %>
                    <!--"<i class=\"heart icon\">delete</i>".html_safe => link_to 안에서 html 태그 사용하기-->
                <% end %><br><br>
                
                <!-- 코멘트 입력 / 제출 -->
            
                  <% if user_signed_in?%>
                    <form action="/board/comments/<%= board.id %>" method="POST">
                    <input type="textarea" name="body" placeholder="댓글을 입력해 주세요">
                    <input type="submit">
                    </form>
                      <% board.comments.reverse.each do |comment| %>
                      
                      <!-- 댓글 작성자-->
                      <%= link_to getNamebyID(comment.user_id), '/profile/mypage/'+comment.user_id.to_s, class: "ui violet basic button"%> : 
                      
                        <% user = nil %>
                        
                        <!-- @XXX 문자열이 없으면 그대로 출력 -->
                        <% if comment.body.scan(/@[^0-9 ]*/).map.first.nil? %>
                          <%= comment.body %> 
                        <!-- @XXX 문자열이 있다면?-->
                        <% else %>
                          <!-- @XXX 형태의 문자열을 겹치는 값이 없는 배열로 저장-->
                          <% comment.body.scan(/@[^0-9 ]*/).map.each do |c|%>
                            <!-- @를 제거한 XXX를 이름으로 User 테이블에서 검색-->
                            <% user = User.find_by(name: c.delete('@'))%>
                          <% end %>
                          <!-- user가 검색되었다면 -->
                
                            <%=  # @이름으로 링크를 달아서 출력
                            h comment.body.gsub(/@[^0-9 ]*/){|word|
                                link_to word.delete('@'), "/profile/mypage/#{getIDbyName(word)}", class: "ui violet basic button"}.html_safe  
                            %>
             
                          <% end %>
                      <hr>
                      <% end %>
                  <% end %>
                </div>
            </div>  
          </div>    
        </div>
        
        <div class="newspace"><br>
        <!-- 게시글 사이에 여백 -->
        </div>
      <% end %>
    </div>

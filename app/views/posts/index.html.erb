<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>




 <!-- Post List Table -->
  <div class="container">  
    <div class="sign_inform">
      <p>
        <% if user_signed_in?%>
          <%= current_user.name %>님 환영합니다<br>
        <%end%>
      </p>
    <p id="notice"><%= notice %></p>
    </div>
  </div>

<div class="box-container">
  <div class="newsfeed">
    <% @boards.each do |board| %>
      <div class="box">
        <div class="">
          <img class="image" src="<%= board.image_url %>">
          <div class="padding">
            <div class="">
              
              <!-- 좋아요 -->
              <div>
                <% if current_user.is_like?(board) %>
                <%= link_to "좋아요 취소", like_board_path(board), method: "POST" %>
                <% else %>
                <%= link_to "좋아요", like_board_path(board), method: "POST" %>
                <% end %>
                <%= board.liked_users.size %>
              </div>
              
              <!-- 게시글 정보 -->
              <b><%= board.profile.user.name %></b>
                 <%= board.title %>
                 <%= board.content %>
              
              <!-- 게시글 편집 -->
              <% if user_signed_in? && current_user.id == board.profile.user.id %>
              <a href="/board/edit/<%= board.id %>"><i class="material-icons">edit</i></a>
              <%= link_to '삭제', board, method: :delete, data: { confirm: '진짜 삭제?' } %>
              <% end %>
              
              <!-- 코멘트 입력 / 제출 -->
              <div>
                <% if user_signed_in?%>
                  <form action="/board/comments/<%= board.id %>" method="POST">
                  <input type="textarea" name="body" placeholder="댓글 쓰는 곳">
                  <input type="submit">
                  </form>
                  <% board.comments.each do |comment| %>
                  <%= comment.body.reverse %><hr>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>  
        </div>    
      </div>
      <div class="newspace"><br>
      <!-- 게시글 사이에 여백 -->
      </div>
    <% end %>
  </div>
</div>

  <br>
</body>

  

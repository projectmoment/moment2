<body>

  <h3>글을 작성해 주세요</h3>
  <div class="new">
    <!-- form_for(Board.new , ) => form_for(@board ,) -->
    <%= form_for(@board, url: create_board_path, method: 'post') do |f| %>

    <div class="ui form">
      <div class="field">
        <%= f.label :title, "글 제목" %>
        <%= f.text_field :title, placeholder: "hello world" %><br>
      </div>  
      <div class="field">
        <%= f.label :content, "글 내용"%>
        <%= f.text_area :content %><br>
      </div>  
    <!--image upload-->
      <div class="field">
        <%= f.label :image_url, "이미지 첨부" %>
        <%= f.file_field :image_url %>
      </div>
      
      <!-- Hashtag 입력창 넣기! -->
        <div class="field">
        <ul>
          <%= f.fields_for :hashtags do |h|%>
            <li>
              <%= h.label :title, "해시태그" %>
              <%= h.text_field :title %>
            </li>
          <% end %>
        </div>  
      </ul>
      <a class="waves-effect waves-light btn-large" href="#"> <%= f.submit "제출" %></a>
    </div> <!-- div ui form-->
    <% end %>  
  </div>
</body>
